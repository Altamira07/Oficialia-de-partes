{% extends '::base.html.twig' %}
{% block titulo %}Lista de tipo de docuemento{% endblock%}
{% block body %}
<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
        <div class="panel-heading">Lista de los tipos de documetos</div>
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tipo de documento</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody>
                    {% for t in tipo %}
                    <tr>
                        <td>{{ t.id }}</td>
                        <td>{{ t.tipoDocumento }}</td>
                        <td><a href="{{ path('del_tipoDocumento',{'id': t.id }) }}" class="btn"><span class="glyphicon glyphicon-remove-sign"></span></a><a href="{{ path('up_tipoDocumento',{'id': t.id }) }}" class="btn"><span class="glyphicon glyphicon-wrench"></span></a></td>
                    </tr>
                        {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}