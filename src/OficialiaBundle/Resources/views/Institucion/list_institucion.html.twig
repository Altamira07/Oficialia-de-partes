{% extends '::base.html.twig' %}
{% block titulo %}Lista de Instituciones{% endblock%}
{% block body %}
<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
        <div class="panel-heading">Lista de Instituciones</div>
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Institucion</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody>
                    {% for i in instituciones %}
                    <tr>
                        <td>{{ i.id }}</td>
                        <td>{{ i.institucion }}</td>
                        <td><a href="{{ path('del_formato',{'id': i.id }) }}" class="btn"><span class="glyphicon glyphicon-remove-sign"></span></a><a href="{{ path('up_formato',{'id': i.id }) }}" class="btn"><span class="glyphicon glyphicon-wrench"></span></a></td>
                    </tr>
                        {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}