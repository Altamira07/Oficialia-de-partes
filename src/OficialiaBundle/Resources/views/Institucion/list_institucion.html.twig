{% extends '::base.html.twig' %}
{% block titulo %}Lista de Instituciones{% endblock%}
{% block body %}
<div class="row">
  <div class="col s6 offset-s3">
        <ul class="collapsible" data-collapsible="accordion">
          <li>
            <div class="collapsible-header"><i class="fa fa-plus-circle" aria-hidden="true"></i>Agregar Instituto</div>
                <div class="collapsible-body">
            {{ form_start(form) }}
              <div class="row">
                <div class="input-field col s8">
                  {{ form_row(form.institucion,{'attr':{'class':'validate'}}) }}
                </div>
                <div class="col s4">
                <br>
                  {{ form_widget(form.Guardar,{'attr':{'class':'btn'},'label':'Agregar'}) }}    
                  
                </div>
              </div>
            
            {{ form_end(form) }}
                
                </div>

            </li>
        </ul>
    </div> 
  <div class="col s6 offset-s3">
    <div class="card-panel white">
      <table class="striped display" id="tabla" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>ID</th>
            <th>Institucion</th>
            <th>Accion</th>
          </tr>
        </thead>
        <tbody>
          {% for i in instituciones %}
          <tr>
            <td>{{ i.id }}</td>
            <td>{{ i.institucion }}</td>
            <td><a href="{{ path('del_institucion',{'id': i.id }) }}" class="waves-effect btn red darken-4"><i class="fa fa-trash" aria-hidden="true"></i></a><a href="{{ path('up_institucion',{'id': i.id }) }}" class="btn"><i class="fa fa-wrench" aria-hidden="true"></i></a></td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>  
{% endblock %}