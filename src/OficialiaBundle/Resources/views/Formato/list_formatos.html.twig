{% extends '::base.html.twig' %}
{% block titulo %}Lista de formatos{% endblock%}
{% block body %}
<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
        <div class="panel-heading">Lista de formatos</div>
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Formatos</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody>
                    {% for f in formatos %}
                    <tr>
                        <td>{{ f.id }}</td>
                        <td>{{ f.formato }}</td>
                        <td><a href="{{ path('del_formato',{'id': f.id }) }}" class="btn"><span class="glyphicon glyphicon-remove-sign"></span></a><a href="{{ path('up_formato',{'id': f.id }) }}" class="btn"><span class="glyphicon glyphicon-wrench"></span></a></td>
                    </tr>
                        {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}